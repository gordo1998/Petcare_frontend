<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/> <!-- Color de la sombra -->
            <corners android:radius="8dp"/> <!-- Redondeo de esquinas -->
        </shape>
    </item>
    <!-- Fondo de tarjeta -->
    <item android:top="2dp" android:right="2dp" android:left="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Color de fondo -->
            <corners android:radius="8dp"/> <!-- Redondeo de esquinas -->
        </shape>
    </item>
</layer-list>
