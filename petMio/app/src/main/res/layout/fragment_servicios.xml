<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.ServiciosFragment">

    <!-- TextView para el título Servicios -->
    <TextView
        android:id="@+id/textViewTituloServicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textSize="25sp"
        android:text="@string/servicios"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"/>

    <!-- ScrollView para contener los botones dinámicos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textViewTituloServicios"
        android:layout_marginTop="16dp">

        <!-- LinearLayout para los botones de servicios -->
        <LinearLayout
            android:id="@+id/layoutServicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Los botones de servicios se añadirán dinámicamente aquí -->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
